package player;

import java.io.Serializable;
import java.util.ArrayList;

import ClientApplication.src.Card;
import ClientApplication.src.Queue;


@SuppressWarnings("serial")
public class Player implements Serializable{

	private ArrayList<Player> friends;
	private Queue hand;
	private Queue discard;
	private int money;
	private String userName;
	private String password;
	
	public Player(String playerName, String password){
		this.password = password;
		this.userName = playerName;
	}

	public int addCardToHand(Card newCard){
		this.hand.add(newCard);
	}

	public int playTopCard(Card newCard){
		this.hand.remove();
	}
}
