package main;

import java.util.ArrayList;

public class MenuChat {
	private static final int MAX_CHAT_ENTRIES = 100;

	private ArrayList<ChatEntry> chatLog;
	
	public MenuChat() {
		chatLog = new ArrayList<ChatEntry>();
	}
	
	public ArrayList<ChatEntry> getChatLog() {
		return chatLog;
	}
	
	public synchronized void addChatEntry(String username, String message) {
		
	}
	
	
	private class ChatEntry {
		private String username, message;
		
		public ChatEntry(String username, String message) {
			this.username = username;
			this.message = message;
		}
		
		public String getUsername() {
			return username;
		}
		
		public String getMessage() {
			return message;
		}
	}
}
